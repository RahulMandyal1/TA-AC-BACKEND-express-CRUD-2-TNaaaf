<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of all the articles</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <h2>Our blog application</h2>
    </header>
    <main>
      <section>
        <div class="navigation-container flex">
          <a href="/" class=" previous">back-to-homepage</a>
          <a href="/articles/newpost" class="next">new post</a>
        </div>
      </section>
      <section class="blog-articles">
        <div class="container">
          <%articles.forEach(cv=>{%>
          <article>
            <h2 class="title"><%= cv.title%></h2>
            <a href="/articles/<%=cv._id%>" class="read-more">read more</a>
          </article>
          <% })%>
        </div>
      </section>
    </main>
  </body>
</html>
